            </HBox>

            <!-- ===================== Player 4 ===================== -->
            <HBox fx:id="p4Row" spacing="18" alignment="CENTER_LEFT" styleClass="player-row">

                <Label fx:id="p4NameLabel"
                       text="Player 4"
                       style="-fx-text-fill: #517d19;"
                       styleClass="name-label"
                       minWidth="200" prefWidth="200" maxWidth="200"
                       textOverrun="CLIP"/>

                <HBox spacing="10" alignment="CENTER_LEFT"
                      minWidth="210" prefWidth="210" maxWidth="210">
                    <Label fx:id="p4WinnerLabel" text="WINNER" styleClass="badge winner"/>
                    <Label fx:id="p4LongestRoadLabel" text="LR" styleClass="badge"/>
                    <Label fx:id="p4LargestArmyLabel" text="LA" styleClass="badge"/>
                </HBox>

                <Label text="VP:" styleClass="stat-label"/>
                <Label fx:id="p4VpLabel"
