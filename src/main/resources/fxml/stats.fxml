<StackPane fx:id="rootPane"
           prefHeight="864.0"
           prefWidth="1536.0"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.view.StatsScreenController"
           alignment="CENTER">

    <Canvas fx:id="hexCanvas" width="1536.0" height="864.0"/>
    
    <VBox fx:id="menuBox"
          styleClass="menu-box"
          alignment="TOP_CENTER"
          spacing="22"
          prefWidth="900"
          prefHeight="520"
          maxWidth="1100"
          maxHeight="650">

        <Label text="Game Results" styleClass="prompt-text-large"/>

        <VBox fx:id="mainBox" spacing="18" alignment="TOP_CENTER">

            <!-- ===================== Player 1 ===================== -->
            <HBox fx:id="p1Row" spacing="18" alignment="CENTER_LEFT" styleClass="player-row">

                <!-- Name column (fixed width) -->
                <Label fx:id="p1NameLabel"
                       text="Player 1"
                       style="-fx-text-fill: #e43b29;"
                       styleClass="name-label"
                       minWidth="200" prefWidth="200" maxWidth="200"
                       textOverrun="CLIP"/>

                <!-- Badges column (fixed width) -->
                <HBox spacing="10" alignment="CENTER_LEFT"
                      minWidth="210" prefWidth="210" maxWidth="210">
                    <Label fx:id="p1WinnerLabel" text="WINNER" styleClass="badge winner"/>
                    <Label fx:id="p1LongestRoadLabel" text="LR" styleClass="badge"/>
                    <Label fx:id="p1LargestArmyLabel" text="LA" styleClass="badge"/>
                </HBox>

                <!-- VP -->
                <Label text="VP:" styleClass="stat-label"/>
                <Label fx:id="p1VpLabel"
                       text="0"
                       style="-fx-text-fill: #e43b29;"
                       styleClass="stat-value"
                       minWidth="60" prefWidth="60" maxWidth="60"
                       alignment="CENTER_RIGHT"/>

                <!-- Spacer pushes right-side stats to the right -->
                <Region HBox.hgrow="ALWAYS"/>

                <!-- Resources -->
                <Label text="Resources:" styleClass="stat-label"/>
                <Label fx:id="p1ResLabel"
                       text="0"
                       styleClass="stat-value-small"
                       minWidth="45" prefWidth="45" maxWidth="45"
                       alignment="CENTER_RIGHT"/>

                <!-- Dev Cards -->
                <Label text="Dev Cards:" styleClass="stat-label"/>
                <Label fx:id="p1DevLabel"
                       text="0"
                       styleClass="stat-value-small"
                       minWidth="45" prefWidth="45" maxWidth="45"
                       alignment="CENTER_RIGHT"/>
            </HBox>

            <!-- ===================== Player 2 ===================== -->
            <HBox fx:id="p2Row" spacing="18" alignment="CENTER_LEFT" styleClass="player-row">

                <Label fx:id="p2NameLabel"
